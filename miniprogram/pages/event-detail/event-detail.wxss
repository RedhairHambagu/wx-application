/* 页面背景颜色 */
page {
  background-color: #EAECE5; /* 莫兰迪绿色系浅色背景 */
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 详情页整体布局 */
.event-detail {
  width: 90%;
  height: 80vh; /* 占满 80% 高度 */
  background: #F6F7F1; /* 柔和的莫兰迪色背景 */
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 活动封面 */
.cover {
  width: 100%;
  height: 100vh;
  border-radius: 20rpx;
  object-fit: cover;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
}

/* 内容区域 */
.content {
  width: 100%;
  padding: 20rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

/* 活动标题 */
.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #3E403A;
  margin-top: 20rpx;
  text-align: center;
}

/* 活动时间 */
.time {
  font-size: 28rpx;
  color: #6E7265;
  margin: 10rpx 0;
}

/* 活动地点 */
.location {
  color: #6D8B74;
  font-size: 28rpx;
  margin: 20rpx 0;
  display: flex;
  align-items: center;
  padding: 15rpx 30rpx;
  background: #F6F7F1;
  border-radius: 30rpx;
  border: 2rpx solid #6D8B74;
  box-shadow: 0 2rpx 8rpx rgba(109, 139, 116, 0.2);
  transition: all 0.3s ease;
}

.location:active {
  transform: scale(0.98);
  background: #EAECE5;
  box-shadow: 0 1rpx 4rpx rgba(109, 139, 116, 0.1);
}

/* 添加导航图标 */
.location::after {
  content: '';
  display: inline-block;
  width: 24rpx;
  height: 24rpx;
  margin-left: 10rpx;
  background-image: url('data:image/svg+xml;base64,');
  background-size: contain;
  background-repeat: no-repeat;
  opacity: 0.8;
}

/* 活动描述 */
.description {
  font-size: 28rpx;
  color: #4E504A;
  line-height: 1.6;
  text-align: justify;
  margin-top: 20rpx;
  padding-bottom: 30rpx;
}

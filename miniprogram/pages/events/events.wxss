/* 整体容器 */
.container {
  padding: 20rpx;
  background-color: #f7f6f2;
}

/* 标题栏 */
.header {
  font-size: 36rpx;
  font-weight: bold;
  color: #5e6d55;
  padding: 20rpx 0;
}

/* 月份标题 */
.month-section {
  margin-top: 40rpx;
}

.month-title {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #3a4a3f;
  margin-bottom: 20rpx;
}

.month-icon {
  font-size: 28rpx;
  color: #3a4a3f;
  margin-right: 10rpx;
}

/* 事件项 */
.event-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.05);
  position: relative;
  margin-bottom: 20rpx;
}

/* 时间点样式 */
.event-dot {
  width: 10rpx;
  height: 10rpx;
  background-color: #8ba89c;
  border-radius: 50%;
  margin-right: 20rpx;
}

/* 事件时间 */
.event-time {
  font-size: 28rpx;
  color: #a1a7a3;
  margin-right: 15rpx;
}

/* 事件标题 */
.event-title {
  font-size: 30rpx;
  color: #37463e;
  font-weight: bold;
}

/* NEW 标签 */
.new-tag {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  background-color: #ff5e5e;
  color: white;
  font-size: 24rpx;
  padding: 5rpx 15rpx;
  border-radius: 20rpx;
}

/* 过去事件样式 */
.past-event {
  background: #f5f5f5;
  opacity: 0.8;
}

.past-event .event-title {
  color: #999;
}

.past-event .event-time {
  color: #999;
}

.past-event .event-dot {
  background-color: #999;
}

/* 过去事件标签 */
.past-tag {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  background-color: #999;
  color: white;
  font-size: 24rpx;
  padding: 5rpx 15rpx;
  border-radius: 20rpx;
}

/* 调整NEW标签和过去事件标签的布局 */
.new-tag, .past-tag {
  margin-left: 10rpx;
}